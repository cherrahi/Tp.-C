#include <stdio.h>
#include <stdlib.h>
//allouez de l'espace memoire pour la chaine; 
char *ChargerChaine(int N) {
    char *chaine = (char*)malloc(N+1);
    if (chaine == NULL) {
        printf("Memory allocation error\n");
        return(1);
    }
    printf("Enter the series: ");
    fgets(chaine, N, stdin);

    int i = 0;
    while (chaine[i] != '\0' && chaine[i] != '\n') {
        i++;
    }
    chaine[i] = '\0';

    return chaine;
}
//caculez la longueur de la chaine; 
int Longueur(char *ch) {
    int len = 0;
    while (ch[len] != '\0') {
        len++;
    }
    return len;
}
//copie le contenu de la chaine; 
void ChargerTab(char *p, char Tab[]) {
    int i = 0;
    while (p[i] != '\0') {
        Tab[i] = p[i];
        i++;
    }
    Tab[i] = '\0';
}
//il refete le contenu du tableau et stocke le resultat dans un autre tableau; 
void InverserTab(char Tab[], int n) {
    char temp;
    for (int i = 0; i < n / 2; i++) {
        temp = Tab[i];
        Tab[i] = Tab[n - i - 1];
        Tab[n - i - 1] = temp;
    }
}
//le contenu du tableau est imprime a l'ecran; 
void AfficherTab(char Tab[], int n) {
    for (int i = 0; i < n; i++) {
        printf("%c", Tab[i]);
    }
    printf("\n");
}

int main() {
    int N;
    printf("Enter the maximum length of the string.: ");
    scanf("%d", &N);
    char *chaine = ChargerChaine(N);
    int longueur = Longueur(chaine);
    char Tab[longueur];
    ChargerTab(chaine, Tab);
    printf("Original series: ");
    AfficherTab(Tab, longueur);
    InverserTab(Tab, longueur);
    printf("Inverse series: ");
    AfficherTab(Tab, longueur);
    free(chaine);
    return 0;
}

#include <stdio.h>
#include <stdlib.h>
#include <string.h>
char *ChargerChaine(int N) {
    char *chaine = (char *)malloc(N + 1); 
    if (chaine == NULL) {
        printf("خطأ في تخصيص الذاكرة\n");
       return 1;
    }
    fgets(chaine, N + 1, stdin);
    chaine[strcspn(chaine, "\n")] = '\0';
    return chaine;
}
int Longueur(char *ch) {
    return strlen(ch);
}
void ChargerTab(char *p, char Tab[]) {
    strcpy(Tab, p);
}
void InverserTab(char Tab[], char T[], int m) {
    for (int i = 0; i < m; i++) {
        T[i] = Tab[m - i - 1];
    }
}
void AfficherTab(char Tab[], int m) {
    for (int i = 0; i < m; i++) {
        printf("%c", Tab[i]);
    }
    printf("\n");
}
int main() {
    int N;
    printf("ادخل طول السلسلة: ");
    scanf("%d", &N);
    char *chaine = ChargerChaine(N);
    int longueur = Longueur(chaine);
    char Tab[longueur];
    ChargerTab(chaine, Tab);
    char T[longueur];
    InverserTab(Tab, T, longueur);
    printf("السلسلة الأصلية: ");
    AfficherTab(Tab, longueur);
    printf("السلسلة المعكوسة: ");
    AfficherTab(T, longueur);
    free(chaine);
    return 0;
}
